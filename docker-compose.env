# SmartSafe AI Production Environment Variables

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
REDIS_PASSWORD=smartsafe2024redis
POSTGRES_PASSWORD=smartsafe2024db
GRAFANA_PASSWORD=smartsafe2024grafana

# Database
DATABASE_URL=postgresql://smartsafe:smartsafe2024db@postgres:5432/smartsafe_saas
REDIS_URL=redis://:smartsafe2024redis@redis:6379

# Flask
FLASK_ENV=production
FLASK_DEBUG=false

# SSL
SSL_CERT_PATH=/etc/nginx/ssl/smartsafe.crt
SSL_KEY_PATH=/etc/nginx/ssl/smartsafe.key

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Backup
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# Application
APP_NAME=SmartSafe AI
APP_VERSION=1.0.0
COMPANY_NAME=SmartSafe AI Technologies

# Rate Limiting
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=10

# File Upload
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,avi,mov 